<% if(review) { %>
<div style="width: 50%">
    <hr>
    <p>
        <%= review.rating %>
    </p>
    <p>
        <%= review.body %>
    </p>
    <small class="card-subtitle mb-2 text-muted">
        sent by
        <%= review.User.email %> on
        <%= review.createdAt %>
    </small>

    <form style="display:initial" action="/games/<%= review.gameId %>/reviews/<%= review.id %>/reviews/<%= review.id %>/destroy"
        method="post">
        <button type="submit" class="btn btn btn-sm btn-outline-danger">Delete</button>
    </form>
    <% } %>
    <hr>
</div>