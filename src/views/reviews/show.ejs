<% if(review) { %>
<div style="width: 50%">
    <hr>
    <p>
        <%= review.rating %>
    </p>
    <p>
        <%= review.body %>
    </p>
    <small class="card-subtitle mb-2 text-muted">
        sent by
        <%= review.User.email %> on
        <%= review.createdAt %>
    </small>

    <% if(currentUser && currentUser.id === review.userId) { %>
    <a href="/games/<%= review.gameId %>/reviews/<%= review.id %>/edit" class="btn btn-warning">Edit</a>
    <form style="display:initial" action="/games/<%= review.gameId %>/reviews/<%= review.id %>/destroy" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <% } %>
    <hr>
</div>
<% } %>