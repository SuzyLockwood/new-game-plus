<!DOCTYPE html>
<html>

<head>
    <% include ../static/partials/head.ejs %>
</head>

<body>
    <% include ../static/partials/messages.ejs %>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= game.image %>">
                <div class="caption-full">
                    <h4><a>
                            <%= game.title %></a></h4>
                    <p>
                        <%= game.description %>
                    </p>
                </div>
            </div>
            <% if(currentUser && currentUser.id === game.userId) { %>
            <a href="/games/<%= game.id %>/edit" class="btn btn-warning">Edit</a>
            <form style="display:initial" action="/games/<%= game.id %>/destroy" method="post">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <% } %>
            <hr>

            <section id="review-list">
                <% if(game.reviews) { %>
                <% game.reviews.forEach((review) => { %>
                <%- include("../reviews/show.ejs", {review}) %>
                <% }) %>
                <% } %>
            </section>
            <div>
                <a class="btn btn-primary btn-lg" href="/games/<%= game.id %>/reviews/new">Write a New Review</a>
            </div>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

</body>

</html>