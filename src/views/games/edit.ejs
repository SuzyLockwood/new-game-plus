<!DOCTYPE html>
<html>

<head>
    <% include ../static/partials/head.ejs %>
</head>

<body>
    <% include ../static/partials/messages.ejs %>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

        <h1>Edit Game</h1>

        <form action="/games/<%= game.id %>/update" method="post">
            <div class="form-group">
                <label for="title">Game Title:</label>
                <input value="<%= game.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp"
                    placeholder="Enter game title">
            </div>
            <div class="form-group">
                <label for="image">Cover Image:</label>
                <input value="<%= game.image %>" type="text" class="form-control" name="image" placeholder="Enter cover image URL"></textarea>
            </div>
            <div class="form-group">
                <label for="description">Game Description:</label>
                <textarea rows="4" class="form-control" name="description" placeholder="Enter brief game description"><%= game.description %></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

</body>

</html>